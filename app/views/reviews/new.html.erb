<h1>Review for <%= @review.trainer.name %></h1>

<ul>
<% @review.errors.full_messages.each do |errors| %>
    <li><%= errors %></li>

    <% end %> 
</ul>

<%= form_for [@trainer, @review] do |f| %> 
    <%= f.hidden_field :trainer_id %>
    <div> 
    <%= f.label :content %><br>
    <%= f.text_area :content %> 
    </div>

    <div>
        <%= f.label :rating %>: (1-5)
        <%= f.number_field :rating, min: 1, max: 5 %> 
    </div>

    <%= f.submit %> 
    <% end %> 

